<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/purple_200">

    <!-- Button to host a game -->
    <Button
        android:id="@+id/buttonHostGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Game"
        android:padding="10dp"
        android:background="@drawable/rounded_corner"/>

    <!-- RecyclerView to display available games -->
    <TextView
        android:id="@+id/textAvailableGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Available Games:"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <com.example.triqui.BoardView
        android:id="@+id/board"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textGameStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>
